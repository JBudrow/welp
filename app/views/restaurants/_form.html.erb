<%= form_for(@restaurant, :html => { multiplart: true}) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <div id="error_explanation" class= "alert alert-danger alert-dismissable">
        <button type="button" class"close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4><%= pluarlize(@review.errors.count, "error") %> prohibited this review from being saved:</h4>

      <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Panera Bread" %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: "form-control", placeholder: "2100 Henderson Mill Rd NE, Atlanta, GA 30345" %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: "form-control", placeholder: "(770) 414-4664" %>
  </div>
  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website, class: "form-control", placeholder: "https://www.panerabread.com" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
